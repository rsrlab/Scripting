<Window x:Class="Scripting.WindowErrorMsg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error" MinHeight="100" MinWidth="250"
        MaxWidth="400"
        SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="50"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Name="textError" Grid.Row="0">Error</TextBlock>

        <Button Grid.Row="1" Content="OK" VerticalAlignment="Center" Width="75"/>
      
    </Grid>
</Window>
